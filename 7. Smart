  </div><script>
  // Time-Based Tip
  const tipsByTime = {
    morning: "Start your day with a glass of water and light stretching.",
    afternoon: "Time to take a quick walk or stretch to boost energy!",
    evening: "Wind down with breathing exercises and reflect on your day.",
    night: "Avoid screens before bed. Try journaling or a warm shower."
  };
  const hour = new Date().getHours();
  const tipContainer = document.getElementById("timeTip");
  if (hour < 12) tipContainer.textContent = tipsByTime.morning;
  else if (hour < 17) tipContainer.textContent = tipsByTime.afternoon;
  else if (hour < 21) tipContainer.textContent = tipsByTime.evening;
  else tipContainer.textContent = tipsByTime.night;

  // Hydration Reminder
  function scheduleHydrationReminder() {
    if ("Notification" in window && Notification.permission !== "granted") {
      Notification.requestPermission();
    }
    setTimeout(() => {
      if (Notification.permission === "granted") {
        new Notification("ðŸ’§ Time to hydrate! Drink a glass of water.");
      }
    }, 3000); // Fires in 3 seconds for demo
  }

  // Random Fact Engine (7-day non-repeat)
  const facts = [
    "Smiling can boost your immune system.",
    "Deep breathing reduces stress hormones.",
    "Sleep helps solidify memories.",
    "Laughter increases oxygen to your organs.",
    "Touching your toes relieves back tension.",
    "Writing thoughts helps mental clarity.",
    "Music can regulate your heartbeat."
  ];
  const shownFacts = JSON.parse(localStorage.getItem('shownFacts') || '[]');
  let nextFact = facts.find(f => !shownFacts.includes(f)) || facts[0];
  document.getElementById("randomFact").textContent = nextFact;
  shownFacts.push(nextFact);
  if (shownFacts.length > 7) shownFacts.shift();
  localStorage.setItem('shownFacts', JSON.stringify(shownFacts));
</script></body>
