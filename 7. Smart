  <div class="max-w-xl mx-auto">
    <h1 class="text-2xl font-bold mb-4">Smart Display & Reminder Engine</h1><!-- Time-Based Health Tip -->
<div id="timeTip" class="mb-4 p-4 bg-blue-100 dark:bg-blue-800 rounded-xl shadow"></div>

<!-- Hydration Reminder -->
<div class="mb-4">
  <button onclick="scheduleHydrationReminder()" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">Set Hydration Reminder</button>
</div>

<!-- Random Fact Display -->
<div id="randomFact" class="p-4 bg-green-100 dark:bg-green-800 rounded-xl shadow"></div>

<!-- End-of-Day Summary (Static for Now) -->
<div class="mt-6 p-4 bg-yellow-100 dark:bg-yellow-800 rounded-xl shadow">
  <h2 class="font-semibold text-lg">Daily Summary (Example)</h2>
  <ul class="list-disc list-inside">
    <li>Exercise Completed: âœ…</li>
    <li>Water Intake: 6/8 glasses</li>
    <li>Mood Log: ðŸ˜Œ Good</li>
